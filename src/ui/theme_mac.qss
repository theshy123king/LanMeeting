/* macOS-inspired layered light theme */

QWidget {
    background: #EDEDED;
    color: #0F0F10;
    selection-background-color: rgba(0, 122, 255, 0.18);
}

QFrame, QListWidget, QPlainTextEdit, QTextEdit, QTabWidget::pane {
    background: #FFFFFF;
    border: 1px solid #D1D1D6;
    border-radius: 12px;
}

QPushButton, QToolButton, QComboBox, QLineEdit, QSpinBox, QDoubleSpinBox {
    background: #F7F7F9;
    border: 1px solid #C7C7CC;
    border-radius: 10px;
    padding: 6px 10px;
    color: #1C1C1E;
}

QPushButton:hover, QToolButton:hover {
    background: #FFFFFF;
    border-color: #B4B4B9;
    color: #1C1C1E;
}

QPushButton:pressed, QToolButton:pressed {
    background: #E5E5EA;
    border-color: #AFAFB4;
    color: #1C1C1E;
}

QPushButton:checked, QToolButton:checked {
    background: #007AFF;
    border-color: #005FD6;
    color: #FFFFFF;
}

QPushButton:disabled, QToolButton:disabled {
    background: #F0F0F0;
    border: 1px solid #D1D1D6;
    color: #7A7A7A;
}

QLineEdit, QComboBox, QSpinBox, QDoubleSpinBox {
    background: #FFFFFF;
}

QStatusBar {
    background: #FFFFFF;
    border-top: 1px solid #D1D1D6;
}

QToolTip {
    background: #FFFFFF;
    border: 1px solid #D1D1D6;
    border-radius: 8px;
    color: #0F0F10;
    padding: 6px;
}

QTabBar::tab {
    background: #E5E5EA;
    border: 1px solid #D1D1D6;
    border-bottom: none;
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
    padding: 8px 14px;
    color: #0F0F10;
}

QTabBar::tab:selected {
    background: #FFFFFF;
    border-color: #C7C7CC;
    color: #000000;
}

QScrollBar:vertical, QScrollBar:horizontal {
    background: transparent;
    border: none;
    width: 10px;
    height: 10px;
    margin: 2px;
}

QScrollBar::handle {
    background: rgba(0, 0, 0, 0.24);
    border-radius: 5px;
}

#floatingControlBar {
    background: #D1D1D6;
    border: 1px solid #C7C7CC;
    border-radius: 12px;
}
